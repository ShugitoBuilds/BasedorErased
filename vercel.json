{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/cron/index?secret=${CRON_SECRET}",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/cron/resolve?secret=${CRON_SECRET}",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/sync?secret=${CRON_SECRET}",
      "schedule": "*/15 * * * *"
    }
  ]
}